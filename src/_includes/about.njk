---
layout: base-bigtext.njk
---

<div id="spacer"></div>
<div class="grid">
  <div class="grid-sizer"></div>
  <div class="grid-item grid-item--span biggy">
    <span class="title">{{ title }}</span>
  </div>
  {% for e in elements %}
  <div class="grid-item">
    <div class="biggy">
      <h2>
        <span class="subtitle">{{ e.title }}</span>
      </h2>
    </div>
    <p>{{ e.text }}</p>
  </div>
  <div class="grid-item grid-spacer cloud"></div>
  {% endfor%}
</div>
